extends layout

block content
 #banner.page-header
  .row
   .col-lg-6
    h1= pageHeader.title
     small &nbsp;#{pageHeader.strapline}

 .row
  .col-xs-12.col-sm-8
   .row.list-group
    each navigation in navigations
     .col-xs-12.list-group-item
      h4
       a(href=navigation.hyperlink)= navigation.title
       small &nbsp;
       span.badge.pull-right.badge-default= navigation.subheading
      p.media= navigation.description 
      p
        each type in navigation.types
         span.label.label-warning= type
         &nbsp;
    
  .col-xs-12.col-sm-4
    p.lead= sidebar