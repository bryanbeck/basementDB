extends layout

block content
  #banner.page-header
    .row
      .col-lg-6
        h1= pageHeader.title
         small &nbsp;#{pageHeader.strapline}

    .col-xs-12.col-sm-8
      .row.list-group
       each item in items
        .col-xs-12.list-group-item
         h4
          a(href='/media/') #{item.title}
          small &nbsp;
           span.badge.pull-right.badge-default 1
          p.address= item.artist
          p
           each dataBlurb in item.dataBlurbs
            span.label.label-warning= dataBlurb
            &nbsp;
        .col-xs-12.list-group-item   
    .col-xs-12.col-sm-4
      p.lead= sidebar