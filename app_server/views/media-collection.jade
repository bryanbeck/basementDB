extends layout

block content
  .row.page-header
    .col-lg-12
      h1= pageHeader.title
  .row
    .col-xs-12.col-md-9
      .row
        .col-xs-12.col-sm-6
          p= textadd
          .panel.panel-primary
            .panel-heading
              form.form-horizontal(action="", method="delete", role="form")
               h2.panel-title= collections.type
            .panel-body
                each mediaType in collections.mediaTypes
                 p= mediaType
            button.btn.btn-default.pull-right Delete
            
    .col-xs-12.col-md-3
      p.lead #{collections.title} #{sidebar.context}
      p #{sidebar.callToAction}