extends layout

block content
 #banner.page-header
  .row.page-header
    .col-lg-12
      h1= pageHeader.title
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="", method="get", role="form")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="title") Title
          .col-xs-12.col-sm-10
            input#title.form-control(name="title")
        button.btn.btn-default.pull-right Search database for media
  .row
    .col-xs-12.col-md-6
      .row
        .col-xs-12.col-sm-6
          p= textadd
          .panel.panel-primary
            .panel-heading
               h2.panel-title= collections.type
            .panel-body
                each mediaType in collections.mediaTypes
                 p= mediaType
.col-xs-12.col-md-4
