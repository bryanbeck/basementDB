extends layout

block content
  .row.page-header
    .col-lg-12
      h1= pageHeader.title
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="/location", method="get", role="form")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="mediaType") Media Type
          .col-xs-12.col-sm-10
            input#mediaType.form-control(mediaType="mediaType")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="title") Title
          .col-xs-12.col-sm-10
            input#title.form-control(title="title")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="artist") Author/Artist
          .col-xs-12.col-sm-10
            input#artist.form-control(artist="artist")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="year") Publication Year
          .col-xs-12.col-sm-10
            input#year.form-control(year="year")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="publisher") Publisher
          .col-xs-12.col-sm-10
            input#publisher.form-control(publsiher="publisher")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="name") Date added
          .col-xs-12.col-sm-10
            input#date.form-control(date="date")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="rating") Rating
          .col-xs-12.col-sm-2
            select#rating.form-control.input-sm(name="rating")
              option 5
              option 4
              option 3
              option 2
              option 1
        .form-group
          label.col-sm-2.control-label(for="review") Notes
          .col-sm-10
            textarea#notes.form-control(name="notes", rows="5")
        button.btn.btn-default.pull-right Search database for media
.col-xs-12.col-md-4